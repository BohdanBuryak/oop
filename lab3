#include <iostream>

int main() {
    const int arraySize = 5;
    int myArray[arraySize] = {2, 6, 7, 1, 8};
    int targetValue = 3;

    int thirdOccurrence = -1;
    int count = 0;

    for (int i = 0; i < arraySize; i++) {
        if (myArray[i] == targetValue) {
            count++; 
            if (count == 3) {
                thirdOccurrence = i; 
                break; 
            }
        }
    }

    if (thirdOccurrence != -1) {
        std::cout << "Номер третього елемента, який дорівнює 10: " << thirdOccurrence << std::endl;
    } else {
        std::cout << "Третій елемент, який дорівнює 10, не знайдено." << std::endl;
    }

    return 0;
}
